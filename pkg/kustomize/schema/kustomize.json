{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "installStep": {
      "type": "object",
      "properties": {
        "kustomize": {
          "type": "object",
          "properties": {
            "description": {
              "$ref": "#/definitions/stepDescription"
            },
            "name": {
              "type": "string"
            },
            "reorder": {
              "type": "string"
            },
            "edit": {
              "type": "object",
              "properties": {
                "description": {
                  "$ref": "#/definitions/stepDescription"
                },
                "add": {
                  "type": "object",
                  "properties": {
                    "annotation": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "key": {
                            "type": "string"
                          },
                          "value": {
                            "type": "string"
                          },
                          "force": {
                            "type": "boolean",
                            "default": false
                          }
                        },
                        "required": [
                          "key", "value"
                        ]
                      },
                      "minItems": 1
                    },
                    "base": {
                      "type": "array",
                      "items": {
                        "path": {
                          "type": "string"
                        }
                      },
                      "required": [ "path" ],
                      "minItems": 1
                    },
                    "configmap": {
                      "type": "object",
                      "properties": {
                        "from-file": {
                          "type": "array",
                          "items": {
                            "file": {
                              "type": "string"
                            }
                          },
                          "minItems": 1,
                          "required": [ "file" ]
                        },
                        "from-env-file": {
                          "type": "array",
                          "file": {
                            "type": "string"
                          },
                          "minItems": 1,
                          "required": [ "file" ]
                        },
                        "from-literal": {
                          "type": "array",
                          "file": {
                            "type": "string"
                          },
                          "minItems": 1,
                          "required": [ "file" ]
                        }
                      },
                      "additionalProperties": false,
                      "anyOf": [
                        { "required": [ "from-file" ] },
                        { "required": [ "from-env-file" ] },
                        { "required": [ "from-literal" ] }
                      ]
                    },
                    "labels": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "key": {
                            "type": "string"
                          },
                          "value": {
                            "type": "string"
                          },
                          "force": {
                            "type": "boolean",
                            "default": false
                          }
                        },
                        "required": [ "key", "value" ],
                        "additionalProperties": false
                      },
                      "minItems": 1
                    },
                    "patch": {
                      "type": "array",
                      "path": {
                        "type": "string"
                      },
                      "minItems": 1,
                      "additionalPropertifes": false,
                      "required": [ "path" ]
                    },
                    "resource": {
                      "type": "array",
                      "path": {
                        "type": "string"
                      },
                      "minItems": 1,
                      "required": [ "path" ]
                    },
                    "secrets": {
                      "type": "object",
                      "parameters": {
                        "from-file": {
                          "type": "array",
                          "secret": {
                            "type": "object",
                            "parameters" : {
                              "file":{
                                "type": "string"
                              },
                              "namespace": {
                                "type": "string"
                              }
                            },
                            "required": [ "file"]
                        },
                        "from-env-file": {
                          "type": "array",
                          "secret": {
                            "type": "object",
                            "parameters": {
                              "file": {
                                "type": "string"
                              },
                              "namespace": {
                                "type": "string"
                              }
                            },
                            "required": [ "file" ]
                          },
                          "minItems": 1
                        },
                        "from-literal": {
                          "type": "array",
                          "secret": {
                            "type": "object",
                            "namespace": {
                              "type": "string"
                            },
                            "path": {
                              "type": "string"
                            }
                          },
                          "minItems": 1
                        },
                        "namespace": {
                          "type": "string"
                        }
                      }
                    }
                  },
                  "additionalProperties": false
                },
                "fix": {
                  "type": "object"
                },
                "remove": {
                  "type": "object"
                },
            "kustomization_input": {
              "type": "array",
              "items": {
                "type": "string",
                "minItems": 1
              }
            },
            "kubernetes_manifest_output": {
              "type": "string"
            },
            "wait": {
              "type": "boolean"
            },
            "autoDeploy": {
              "type": "boolean",
              "default": false
            },
            "set": {
              "type": "object",
              "minItems": 1,
              "additionalProperties": true
            },
            "values": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "outputs": {
              "$ref": "#/definitions/outputs"
            },
            "parameters": {
              "type": "object",
              "additionalProperties": {
                "type": "string"
              }
            }
          },
          "additionalProperties": false,
          "required": [
            "name",
            "description",
            "kustomization_input",
            "kubernetes_manifest_output"
          ]
        }
      },
      "required": [
        "kustomize"
      ],
      "additionalProperties": false
    },
    "upgradeStep": {
      "type": "object",
      "properties": {
        "kustomize": {
          "type": "object",
          "properties": {
            "description": {
              "$ref": "#/definitions/stepDescription"
            },
            "set": {
              "type": "object",
              "image": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            }
          }
        },
            "name": {
              "type": "string"
            },
            "kustomization_input": {
              "type": "array",
              "items": {
                "type": "string",
                "minItems": 1
              }
            },
            "reorder": {
              "type": "string"
            },
            "kubernetes_manifest_output": {
              "type": "string"
            },
            "wait": {
              "type": "boolean",
              "default": false
            },
            "set": {
              "type": "object",
              "minItems": 1,
              "additionalProperties": true
            },
            "outputs": {
              "$ref": "#/definitions/outputs"
            }
          },
          "additionalProperties": false,
          "required": [
            "name",
            "description",
            "kustomization_input",
            "kubernetes_manifest_output"
          ]
        }
      },
      "required": [
        "kustomize"
      ]
    },
    "statusStep": {
      "type": "object",
      "properties": {
        "kustomize": {
          "type": "object",
          "properties": {
            "description": {
              "$ref": "#/definitions/stepDescription"
            },
            "releases": {
              "type": "array",
              "items": {
                "type": "string",
                "minItems": 1
              }
            }
          },
          "additionalProperties": false,
          "required": [
            "description"
          ]
        }
      },
      "required": [
        "kustomize"
      ]
    },
    "uninstallStep": {
      "type": "object",
      "properties": {
        "kustomize": {
          "type": "object",
          "properties": {
            "description": {
              "$ref": "#/definitions/stepDescription"
            },
            "name": {
              "type": "string"
            },
            "kustomization_input": {
              "type": "array",
              "items": {
                "type": "string",
                "minItems": 1
              }
            },
            "kubernetes_manifest_output": {
              "type": "string"
            },
            "reorder": {
              "type": "string"
            },
            "set": {
              "type": "object",
              "minItems": 1,
              "additionalProperties": true
            },
            "purge": {
              "type": "boolean",
              "default": false
            }
          },
          "additionalProperties": false,
          "required": [
            "description",
            "kustomization_input",
            "kubernetes_manifest_output"
          ]
        }
      },
      "required": [
        "kustomize"
      ]
    },
    "stepDescription": {
      "type": "string",
      "minLength": 1
    },
    "outputs": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "secret": {
            "type": "string"
          },
          "key": {
            "type": "string"
          }
        },
        "additionalProperties": false,
        "required": ["name", "secret", "key"]
      }
    }
  },
  "type": "object",
  "properties": {
    "install": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/installStep"
      }
    },
    "upgrade": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/upgradeStep"
      }
    },
    "status": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/statusStep"
      }
    },
    "uninstall": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/uninstallStep"
      }
    }
  },
  "additionalProperties": false
}
